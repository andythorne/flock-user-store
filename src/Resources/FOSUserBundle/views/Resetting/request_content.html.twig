{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="form fos_user_resetting_request">
    <div class="form-group">
        <label for="username">{{ 'resetting.request.username'|trans }}</label>
        <input type="text" id="username" name="username" required="required" />
    </div>
    <div class="form-group">
        <button type="submit">{{ 'resetting.request.submit'|trans }}</button>
    </div>

    <p class="message">
        <a href="{{ path('fos_user_security_login') }}">Back to Login</a>
    </p>
</form>
